                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <TextBox Text="0" x:Name="PinNumberTextBox" TextAlignment="Center" VerticalAlignment="Center"/>
